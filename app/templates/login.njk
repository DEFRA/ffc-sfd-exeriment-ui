{% extends '.layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-message/macro.njk" import govukErrorMessage %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds govuk-body">
      <h1 class="govuk-heading-l">Sign in to manage your land and farm businesses</h1>

      <p>Use this service to view and update:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>personal and business details</li>
        <li>Animal health and welfare scheme</li>
        <li>Sustainable Farming Incentive (SFI)</li>
        <li>Calf Housing for Health and Welfare grant</li>
      </ul>

      <div class="govuk-inset-text">
        <p>You'll need to <a class="govuk-link govuk-link--no-visited-state" href="#">
          sign in to the Rural Payments service</a> to view and update:</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>land and maps</li>
          <li>Countryside Stewardship (CS)</li>
          <li>who has permission to act on behalf of the business</li>
        </ul>
      </div>

      {% if errorMessage %}
        {{ govukErrorMessage({
          text: errorMessage
        }) }}
      {% endif %}

      <form method="POST" action={{formActionPage}} novalidate>
        <input type="hidden" name="crumb" value="{{crumb}}" />
        <div class="govuk-form-group {{ "govuk-form-group--error" if errorMessage }}">
        <label class="govuk-label" for="crn">
          Customer reference number (CRN)
        </label>
        <div id="event-name-hint" class="govuk-hint">
          This is the 10-digit number emailed to you when you registered with the Rural Payments service.
        </div>
        <input class="govuk-input" id="crn" name="crn" type="text" autocomplete="crn">
    </div>
    <div class="govuk-form-group">
      <label class="govuk-label" for="password">
        Password
      </label>
      <div id="event-name-hint" class="govuk-hint">
        This is your Rural Payments service password.
      </div>
      <input class="govuk-input" id="password" name="password" type="password" autocomplete="password">
    </div>
<!--    <fieldset>-->
      <button type="submit" class="govuk-button" data-module="govuk-button">
        Sign in
      </button>
<!--    </fieldset>-->
    </form>
    <p class="govuk-body"><a class="govuk-link--no-visited-state" href="../../../_common/not-testing.html">I have forgotten my password</a></p>

    <details class="govuk-details">
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text">
          Help signing in
        </span>
      </summary>
      <div class="govuk-details__text">
        Contact the Rural Payments Agency by email or phone if:
        <ul class="govuk-list govuk-list--bullet">
          <li>you have forgotten your CRN</li>
          <li>you have lost your CRN</li>
          <li>your CRN is not recognised</li>
        </ul>

        <p class="govuk-!-margin-bottom-0">Email: <a href="../../../_common/not-testing.html" class="govuk-link--no-visited-state">ruralpayments@defra.gov.uk</a></p>
        <p class="govuk-!-margin-bottom-0">Telephone: 03000 200 301</p>
        <p class="govuk-!-margin-bottom-0">Monday to Friday, 8:30am to 5pm, except bank holidays</p>
        <p><a href="../../../_common/not-testing.html" class="govuk-link--no-visited-state">Find out about call charges</a></p>

        <p>If you do not have an account, you can register for one by contacting the Rural Payments Agency.</p>
      </div>

    </details>
  </div>
{% endblock %}